<Window x:Class="StReaderWithVideo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StReaderWithVideo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        KeyDown="OnKeyDown">
    <Grid>
        <MediaElement x:Name="Video" LoadedBehavior="Manual" Stretch="Fill" MouseLeftButtonUp="OnMouseLeftButtonUp"></MediaElement>
        <TextBlock x:Name="St" TextAlignment="Center" Text="Subtitle" VerticalAlignment="Bottom" Margin="0,0,0,25" Background="#7F000000" Foreground="#BFFFFFFF" HorizontalAlignment="Center" Padding="5,0,4,0" FontSize="16"/>
    </Grid>

</Window>
